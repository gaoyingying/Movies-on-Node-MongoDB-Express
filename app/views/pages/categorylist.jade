extends ../layout
block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影分类
            th 录入时间
            th 查看
            th 更新
            th 删除
        tbody
          each item in categories
            tr(class="item-name-#{item.name}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../movie/#{item.name}") 查看
              td: a(target="_blank", href="../admin/category/update/#{item.name}") 修改
              td
                button.btn.btn-danger.del(type="button", data-name="#{item.name}") 删除
  script(src="/js/category.js")
